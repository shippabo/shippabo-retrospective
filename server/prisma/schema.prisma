datasource db {
  provider = "sqlite"
  url      = "file:./sqlite.db"
}

generator client {
  provider = "prisma-client-js"
}

model Session {
  id        Int       @id @default(autoincrement())
  name      String
  startedAt DateTime?
  stoppedAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  User     User[]
  Activity Activity[]
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  order     Int      @default(1)
  isHost    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sessionId Int

  session Session @relation(fields: [sessionId], references: [id])
}

model Activity {
  id        Int      @id @default(autoincrement())
  event     String
  eventAt   DateTime @default(now())
  sessionId Int

  session Session @relation(fields: [sessionId], references: [id])
}
